<h1 style="margin-top: 3cm;margin-bottom: 2cm; text-align: center;"><b>Find Requests</b></h1>

<% if (message.length > 0) { %>
<h3><%=message%></h3>
<% } else { %>
<div class="row">
  <% for (var i = 0; i < data.length; i++) { %>
  <div class="col-sm-6" onclick="location.href='/request_details/<%=data[i].id%>'" style="cursor: pointer;">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%=data[i].bookname%> (<%=data[i].year%>)</h5>
        <p class="card-text"><small class="text-muted"><%= data[i].genre%></small></p>
        <p class="card-text"><%=data[i].des%></p>
        
      </div>
    </div>
  </div>
  <% } %>
</div>
<% } %>


</body>
