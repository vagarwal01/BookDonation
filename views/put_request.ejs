<h1 style="margin-top: 3cm;margin-bottom: 2cm; text-align: center;"><b>Put Request</b></h1>


<div class="wrapper">
  <h3 style="margin-top: 0cm;margin-bottom: 1cm;"><b>Personal Contact Info</b></h3>
  
  <form class="form" method="POST" action="/uploadrequest" enctype="multipart/form-data">


    <div class="form-row">
    <div class="form-group col-md-6">
      <div class="col">
        <label for="validationDefault01">First name</label>
        <input type="text" class="form-control" name="firstname" id="validationDefault01" placeholder="eg: Mark" required>
      </div>
    </div>

    <div class="form-group col-md-6">
      <div class="col">
        <label for="validationDefault01">Last name</label>
        <input type="text" class="form-control" name="lastname" id="validationDefault01" placeholder="eg: Twain" required>
      </div>
    </div>
  </div>

  
    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Address</label>
        <input type="text" class="form-control" name="address" id="validationDefault01" placeholder="eg: 1234 Main Street" required>
      </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <div class="col">
        <label for="validationDefault01">City</label>
        <input type="text" class="form-control" name="city" id="validationDefault01" placeholder="eg: Ghaziabad" required>
      </div>
    </div>
    
    <div class="form-group col-md-4">
      <div class="col">
        <label for="validationDefault01">State</label>
        <input type="text" class="form-control" name="state" id="validationDefault01" placeholder="eg: Uttar Pradesh" required>
      </div>
    </div>

    <div class="form-group col-md-2">
      <div class="col">
        <label for="validationDefault01">Zip</label>
        <input type="text" class="form-control" name="zip" id="validationDefault01" placeholder="eg: 201002" required>
      </div>
    </div>
  </div>


    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Email Address</label>
        <input type="email" class="form-control" name="email" id="validationDefault01" placeholder="eg: abc123@gmail.com" required>
      </div>
    </div>

    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Contact Number</label>
        <input type="number" class="form-control" name="contact" id="validationDefault01" placeholder="eg: 9898****99">
      </div>
    </div>

    <h3 style="margin-top: 2cm;margin-bottom: 1cm;"><b>Request Info</b></h3>

    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Book Name</label>
        <input type="text" class="form-control" name="bookname" id="validationDefault01" placeholder="eg: The Theory of Everything" required>
      </div>
    </div>

    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Book Genre</label>
        <input type="text" class="form-control" name="genre" id="validationDefault01" placeholder="eg: Literature" required>
      </div>
    </div>
    
    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Publish Year</label>
        <input type="text" class="form-control" name="year" id="validationDefault01" placeholder="eg: 2012" required>
      </div>
    </div>
    
    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Description</label>
        <textarea type="text" class="form-control" name="description" id="exampleFormControlTextarea" rows="3" placeholder="eg: Book is for children" required></textarea>
      </div>
    </div>

    <div class="form-group col-md-14">
      <div class="col">
        <label for="validationDefault01">Upload File</label>
        <input type="file" accept="image/*" class="form-control" name="bookCover" id="validationDefault01" required>
      </div>
    </div>

      <div class="button" style="margin: 1cm auto;">
        <div class="center">
